<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greyimg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bgblue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Groups List"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" >
    </TextView>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearchats"
        android:layout_below="@+id/text1"
        android:layout_marginTop="5dp"
        android:background="@drawable/greyimg"

android:cacheColorHint="@android:color/transparent"
        android:divider="@color/hash"
        android:dividerHeight="2dp" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearchats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/bottomBtnchts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/bgblue"
            android:padding="10dp"
            android:text="   chat   "
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bottomBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.5"
            android:background="@drawable/bgblue"
            android:padding="10dp"
            android:text="Create group"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>